<h1>Quiz#new</h1>
<p>the quiz!!!</p>

<%= form_for @quiz do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>

  <%= f.fields_for :questions do |q|%>
      <%= q.label :question_content %>
      <%= q.text_field :content %>
      <br>
      <br>

      <%= q.fields_for :answers do |a| %>
        <%= a.label :answer_content %>
        <%= a.text_field :content %>

    <br>
    <br>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>